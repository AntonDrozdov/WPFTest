<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GOOD LIST
" Height="600" Width="602.612" WindowStartupLocation="CenterScreen" Activated="Window_Activated">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button  Content="Add" FontSize="16" Width="600" Name="b_Add" Height="30" VerticalAlignment="Top" Click="b_Add_Click"></Button>
        </StackPanel>

        <DataGrid Grid.Column="0" Grid.Row="1" Name="dg_goods" SelectionMode="Single" />
        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button  Content="Edit" FontSize="16" Width="300" Name="b_Edit" Click="b_Edit_Click"></Button>
            <Button  Content="Delete" FontSize="16" Width="300" Name="b_Delete" Click="b_Delete_Click"></Button>
        </StackPanel>





    </Grid>
</Window>

    